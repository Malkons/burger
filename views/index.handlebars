<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <h2>Burgers that haven't been eaten!</h2>
            <ul>
                {{#each burgers}}
                {{#unless eaten}}
                {{> burgers/burger-block eaten=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-sm-6">
            <h2>Burgers that have been eaten!</h2>
            <ul>
                {{#each burgers}}
                {{#if eaten}}
                <li>
                 {{name}}
                    <button class="delete-burger" data-id="{{this.id}}">Poop!</button>
                </li>
                {{/if}}
                {{/each}}

            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-8">
            <h2>Add a Burger</h2>
            <form class="create-form">
                <div class="form-group">
                    <label for="ca">Burger Name:</label>
                    <input type="text" id="ca" name="name">
                </div>
                <button type="submit">Add Burger</button>
            </form>
        </div>
    </div>
</div>